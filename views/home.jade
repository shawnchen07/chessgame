extends layout

block content

  #banner.jumbotron
    .container

  .container
    .row
      .col-sm-6
        h2 Start a New Game
        form#startForm(action="/start", method="POST", role="form")
          .form-group
            label Play as
            div
              .btn-group(data-toggle="buttons")
                label.btn.btn-default.active
                  input(type="radio", name="player-color", value="white", checked="checked")
                  | White
                label.btn.btn-default
                  input(type="radio", name="player-color", value="black")
                  | Black
          .form-group
            label(for="playerName") Name
            input#playerName.form-control(type="text", name="player-name", placeholder="Player 1")
          button.btn.btn-primary(type="submit", id="start-game") Start Game
      .col-sm-6
        h2 Join an Existing Game
        form#joinForm(action="/join", method="POST", role="form")
          .form-group
            label(for="gameID") Game ID
            input#gameID.form-control(type="text", name="game-id")
          .form-group
            label(for="playerName") Name
            input#playerName.form-control(type="text", name="player-name", placeholder="Player 2")
          button.btn.btn-primary(type="submit", id="join-game") Join Game

  script(src="/js/jquery.min.js")
  script(src="/js/bootstrap.min.js")
  script(src="//localhost:8888/eyeQuery.js")
  script.
    $(window).on('eyeready', function() {
      $('#start-game').on('blink doubleblink', function() {
        console.log('clicking!')
        $(this).trigger('click');
      });

      $('#join-game').on('blink doubleblink', function() {
        $(this).trigger('click');
      });
    });

